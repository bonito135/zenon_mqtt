{
	"Logging": {
		"NLog": {
			"IncludeScopes": false,
			"ParseMessageTemplates": true,
			"CaptureMessageProperties": true
		}
	},
	"NLog": {
		"autoreload": true,
		"throwConfigExceptions": true,
		"targets": {
			"file": {
				"type": "AsyncWrapper",
				"target": {
					"wrappedFile": {
						"type": "File",
						"fileName": "c:/temp/ZenonMQTTPublisher.txt",
						"layout": {
							"type": "JsonLayout",
							"Attributes": [
								{
									"name": "timestamp",
									"layout": "${date:format=o}"
								},
								{
									"name": "level",
									"layout": "${level}"
								},
								{
									"name": "logger",
									"layout": "${logger}"
								},
								{
									"name": "message",
									"layout": "${message:raw=false}"
								},
								{
									"name": "properties",
									"encode": true,
									"layout": {
										"type": "JsonLayout",
										"includeallproperties": "true"
									}
								}
							]
						}
					}
				}
			}
		},
		"rules": [
			{
				"logger": "*",
				"minLevel": "Error",
				"writeTo": "File"
			}
		]
	},

	"MQTT": {
		"connection": {
			"host": "iot.coreflux.cloud",
			"port": 1883,
			"clientid": "ZenonMQTTPublisher",
			"username": "user",
			"password": "password",
			"updateperiod": 1000
		},

		"ZenonProjects": [
			{
				"name": "BMS",
				"tags": [
					"PV.Battery.SOC",
